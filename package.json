{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "concurrently \"yarn db:sync\" \"yarn build:css\" \"remix build\"",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "dev": "concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "db:sync": "npx prisma db push",
    "db:seed": "node ./prisma/seed.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "3.7.0",
    "@remix-run/react": "1.1.1",
    "@remix-run/serve": "1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "@tailwindcss/forms": "^0.4.0",
    "autoprefixer": "^10.4.1",
    "dotenv": "^10.0.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.5",
    "prisma": "3.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "1.1.1",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@remix-run/dev": "1.1.1",
    "@types/lodash": "^4.14.178",
    "@types/react": "17.0.38",
    "@types/react-dom": "^17.0.9",
    "concurrently": "6.5.1",
    "faker": "^5.5.3",
    "tailwindcss": "3.0.8",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
